<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- DGII Invoice Report Template -->
    <template id="report_invoice_document_dgii">
        <t t-call="web.external_layout_customize">
            <t t-set="company" t-value="(docs and docs[0].company_id) or env.company"/>
            <t t-set="o" t-value="o.with_context(lang=lang)" />
            <t t-set="forced_vat" t-value="o.fiscal_position_id.foreign_vat"/> <!-- So that it appears in the footer of the report instead of the company VAT if it's set -->
            <div t-attf-class="header o_company_#{company.id}_layout">
                <div class="d-flex justify-content-between align-items-center py-0 mb-0">
                    <div class="flex-grow-1 py-0 mb-0" >
                        <div class="d-flex justify-content-between align-items-center">
                            <img t-if="company.logo" class="o_company_logo_small" t-att-src="image_data_uri(company.logo)" alt="Logo"/>
                            <div t-if="company.report_header" t-field="company.report_header" class="o_company_tagline mw-50 fw-bold">Company tagline</div>
                        </div>
                        <div class="row">
                            <div class="col-9" name="company_address">
                                <!-- <ul class="list-unstyled" name="company_address_list">
                                    <li t-if="company.is_company_details_empty"><span t-field="company.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'>
                                        <div class="bg-light border-1 rounded h-100 d-flex flex-column align-items-center justify-content-center p-4 w-100 opacity-75 text-muted text-center">
                                            <strong>Company address block</strong>
                                            <div>Contains the company address.</div>
                                        </div>
                                    </span></li>
                                    <li t-else="">
                                        <span t-field="company.company_details">
                                            <div class="bg-light border-1 rounded h-100 d-flex flex-column align-items-center justify-content-center p-4 w-100 opacity-75 text-muted text-center">
                                                <strong>Company details block</strong>
                                                <div>Contains the company details.</div>
                                            </div>
                                        </span>
                                    </li>
                                    <li t-if="not forced_vat"/>
                                    <li t-else="">
                                        <t t-esc="company.country_id.vat_label or 'Tax ID'">Tax ID</t>:
                                        <span t-esc="forced_vat">US12345671</span>
                                    </li>
                                </ul> -->

                                <ul class="list-unstyled">
                                    <li style = "font-size:20px; font-weight : bold; color :rgb(12, 120, 192);"><span t-esc= "company.partner_id.name"/> </li>
                                    <li><span>Sucursal Gascue</span> </li>
                                    <li><span t-esc= "company.country_id.vat_label"/> <span t-esc= "company.partner_id.vat"/></li>
                                    <li> <span>Dirección :</span> <span style = "font-size:12px;" t-esc= "company.partner_id.street"/></li>
                                    <li><strong>Fecha Emisión: </strong> <span t-esc="o.invoice_date.strftime('%d-%m-%Y') if o.invoice_date else ''"/></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div id="right-elements01" class="d-flex flex-column align-items-end">
                        <div style ="font-size: 20px; font-weight: bold; color :rgb(12, 120, 192);"> <span t-esc="o.l10n_latam_document_type_id.name"/><span> Electrónica</span></div>
                        <div> e-NCF: <span t-esc="o.dgii_ncf"/></div>
                        <div class="d-flex flex-column align-items-end" t-if="o.l10n_latam_document_type_id.code == '33' or o.l10n_latam_document_type_id.code == '34'"> 
                            <div> NCF Modificado : E320000000006</div>
                            <div> Corrige montos del NCF modificado</div>
                        </div>
                        <div t-elif="o.l10n_latam_document_type_id.code != '32'"> Fecha Vendmlento: <span t-esc="o.invoice_date_due.strftime('%d-%m-%Y') if o.invoice_date_due else ''"/></div>
                    </div>
                </div>
            </div>
            <div class="clearfix invoice_main">
                <div class="page mb-4">
                    <div class="oe_structure"></div>
                    <div t-if="o.l10n_latam_document_type_id.code != '43'">
                        <div class = "page-sep"/>
                        <div style="display:inline-block; margin-top : 10px">
                            <p style="margin:0"><strong>Razón Social Cliente : </strong> <span t-esc="o.partner_id.name"/></p>
                            <!-- <p style="margin:0; padding-left:0px">
                                <span t-esc="o.partner_id.street"/>
                                <span t-esc="o.partner_id.street2"/>
                                <span t-esc="o.partner_id.city"/>
                                <span t-esc="o.partner_id.state_id.name"/>
                                <span t-esc="o.partner_id.zip"/>
                                <span t-esc="o.partner_id.country_id.name"/>
                            </p> -->
                            <p style="margin:0"><strong>RNC Cliente: </strong> <span t-esc="o.partner_id.vat"/></p>
                        </div>
                    </div>

                    <div class="oe_structure"></div>
                    <div class = "page-sep"/>

                    <table class="o_has_total_table table o_main_table table-borderless mb-0" name="invoice_line_table">
                        <thead>
                            <tr>
                                <th name="th_description" class="text-start"><span>Descriptión</span></th>
                                <th name="th_quantity" class="text-end"><span>Cantldad</span></th>
                                <th name="th_priceunit" t-attf-class="text-end text-nowrap {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Precio</span></th>
                                <th name="th_discount" t-if="display_discount" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span>Disc.%</span>
                                </th>
                                <th name="th_taxes" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>ITBIS</span></th>
                                <th name="th_subtotal" class="text-end">
                                    <span>Amount</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="current_total" t-value="0"/>
                            <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                            <t t-foreach="lines" t-as="line">
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>
                                <t t-set="current_total" t-value="current_total + line.price_total"/>

                                <tr t-att-class="'fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="line.display_type == 'product'" name="account_invoice_line_accountable">
                                        <td name="account_invoice_line_name">
                                            <span t-if="line.name" t-field="line.name" t-options="{'widget': 'text'}">Bacon Burger</span>
                                        </td>
                                        <td name="td_quantity" class="o_td_quantity text-end">
                                            <span t-field="line.quantity" class="text-nowrap">3.00</span>
                                            <span t-field="line.product_uom_id"  groups="uom.group_uom">units</span>
                                        </td>
                                        <td name="td_price_unit" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span class="text-nowrap" t-field="line.price_unit">9.00</span>
                                        </td>
                                        <td name="td_discount" t-if="display_discount" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span class="text-nowrap" t-field="line.discount">0</span>
                                        </td>
                                        <t t-set="taxes" t-value="', '.join([(tax.invoice_label or tax.name) for tax in line.tax_ids])"/>
                                        <td name="td_taxes" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }} {{ 'text-nowrap' if len(taxes) &lt; 10 else '' }}">
                                            <span t-out="taxes" id="line_tax_ids">Tax 15%</span>
                                        </td>
                                        <td name="td_subtotal" class="text-end o_price_total">
                                            <span class="text-nowrap" t-field="line.price_subtotal">27.00</span>
                                        </td>
                                    </t>
                                    <t t-elif="line.display_type == 'line_section'">
                                        <td colspan="99">
                                            <span t-if="line.name" t-field="line.name" t-options="{'widget': 'text'}">A section title</span>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-elif="line.display_type == 'line_note'">
                                        <td colspan="99">
                                            <span t-if="line.name" t-field="line.name" t-options="{'widget': 'text'}">A note, whose content usually applies to the section or product above.</span>
                                        </td>
                                    </t>
                                </tr>

                                <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-end">
                                        <td colspan="99">
                                            <strong class="mr16">Subtotal</strong>
                                            <span
                                                t-out="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                            >31.05</span>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <!-- Tax and QR code -->
                    <div class="page-sep" />
                    <div class="d-flex justify-content-between align-items-center" style = "margin-top:40px">

                        <!-- Left Column (QR Code + Security Info) -->
                        <div style="font-szie: 19px; padding:12px; display:inline-block;">
                            <!-- <span t-esc="o.dgii_codigo_seguridad"/> -->
                            <img t-att-src="'data:image/png;base64,%s' % (o.qr_code.decode())" width="120" height="120"/>
                            <p style="margin:0;">Código de Seguridad: <span t-esc="o.dgii_codigo_seguridad"/></p>
                            <p style="margin:0;">Fecha de Firma Digital: 
                                <span t-esc="o.invoice_date.strftime('%d-%m-%Y') if o.invoice_date else ''"/>
                            </p>
                        </div>

                        <!-- Right Column (Totals) -->
                        <div class="col-6 text-end">
                            <table class="o_total_table table table-borderless avoid-page-break-inside" style="width:auto; float:right;">
                                <tr>
                                    <td style = "padding: 10px 20px;"><strong>Subtotal Gravado:</strong></td>
                                    <td class = "o_price_total text-end" style = "padding: 10px 20px;">
                                        <span class="text-nowrap" t-field="o.amount_untaxed"/>
                                        <!-- <span class="text-nowrap"> RD$ 88,983.05</span> -->
                                    </td>
                                </tr>   
                                <tr>
                                    <td  style = "padding: 10px 20px;"><strong>Total ITBIS:</strong></td>
                                    <td class = " o_price_total text-end" style = "padding: 10px 20px;">
                                        <span class="text-nowrap" t-field="o.amount_tax"/>
                                        <!-- <span class="text-nowrap"> RD$ 16,016.95</span> -->
                                    </td>
                                </tr>
                                <tr>
                                    <td  style = "padding: 10px 20px;"><strong>Total:</strong></td>
                                    <td class = " o_price_total text-end"  style = "padding: 10px 20px;">
                                        <span class="text-nowrap" t-field="o.amount_total"/>
                                        <!-- <span class="text-nowrap"> RD$ 17,565.78</span> -->
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                </div>
            </div>

            <div t-attf-class="footer o_company_#{company.id}_layout {{report_type != 'pdf' and 'mt-auto'}}">
                <div class="o_footer_content d-flex justify-content-center border-top pt-2">
                    <div class="text-center text-muted">
                        <span t-esc= "company.partner_id.email"/>
                        <span t-esc= "company.partner_id.website"/>
                        <span > R.N.C </span>
                        <span t-esc= "company.partner_id.vat"/>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="document_tax_totals_template">
        <!--
            Generic template to display tax totals in pdf reports.
            Used by invoices, SO and PO.

            ARGUMENTS:
            - currency: The res.currency to use.
            - tax_totals: dict in the form generated by account.move's _get_tax_totals.
        -->
        <t t-set="same_tax_base" t-value="tax_totals['same_tax_base']"/>
        <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
            <tr class="o_subtotal">
                <td>
                    <span t-out="subtotal['name']">Subtotal Gravado</span>
                </td>
                <td class="text-end">
                    <span t-att-class="oe_subtotal_footer_separator"
                          t-out="subtotal['base_amount_currency']"
                          t-options='{"widget": "monetary", "display_currency": currency}'
                    >27.00</span>
                </td>
            </tr>

            <t t-foreach="subtotal['tax_groups']" t-as="tax_group">
                <tr class="o_taxes">
                    <t t-if="same_tax_base or tax_group['display_base_amount_currency'] is None">
                        <td style="max-width: 200px;">
                            <span t-out="tax_group['group_name']">Tax 15%</span>
                        </td>
                        <td class="text-end o_price_total">
                            <span class="text-nowrap"
                                  t-out="tax_group['tax_amount_currency']"
                                  t-options='{"widget": "monetary", "display_currency": currency}'
                            >1.05</span>
                        </td>
                    </t>
                    <t t-else="">
                        <td>
                            <span t-out="tax_group['group_name']">Tax 15%</span>
                            <span> on </span>
                            <span class="text-nowrap"
                                  t-out="tax_group['display_base_amount_currency']"
                                  t-options='{"widget": "monetary", "display_currency": currency}'
                            >27.00</span>
                        </td>
                        <td class="text-end o_price_total">
                            <span class="text-nowrap"
                                  t-out="tax_group['tax_amount_currency']"
                                  t-options='{"widget": "monetary", "display_currency": currency}'
                            >4.05</span>
                        </td>
                    </t>
                </tr>
            </t>
        </t>

        <tr t-if="'cash_rounding_base_amount_currency' in tax_totals">
            <td>Rounding</td>
            <td class="text-end">
                <span t-out="tax_totals['cash_rounding_base_amount_currency']"
                      t-options='{"widget": "monetary", "display_currency": currency}'
                >0</span>
            </td>
        </tr>
        
        <!--Total amount with all taxes-->
        <tr class="o_total">
            <td><strong>Total</strong></td>
            <td class="text-end">
                <strong t-out="tax_totals['total_amount_currency']"
                        t-options='{"widget": "monetary", "display_currency": currency}'
                >31.05</strong>
            </td>
        </tr>
    </template>

    <!-- Allow edits (e.g. studio) without changing the often inherited base template -->
    <template id="document_tax_totals" inherit_id="dgii_invoicing.document_tax_totals_template" primary="True"></template>

    <template id="document_tax_totals_company_currency_template">
        <t t-set="currency" t-value="o.company_currency_id"/>
        <t t-set="same_tax_base" t-value="tax_totals['same_tax_base']"/>
        <div class="mb-2 mt-3 border p-2 avoid-page-break-inside totals_taxes_company_currency">
            <table class="o_total_table table table-borderless mb-0">
                <p class="tax_computation_company_currency">
                    Taxes <span t-field="o.company_currency_id"/>
                </p>
                <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
                    <tr class="o_subtotal">
                        <td>
                            <span t-out="subtotal['name']">Untaxed amount</span>
                        </td>
                        <td class="text-end">
                            <span t-out="subtotal['base_amount']"
                                  t-options='{"widget": "monetary", "display_currency": currency}'
                            >27.00</span>
                        </td>
                    </tr>
                    <t t-foreach="subtotal['tax_groups']" t-as="tax_group">
                        <tr class="o_taxes">
                            <t t-if="same_tax_base or tax_group['display_base_amount'] is None">
                                <td>
                                    <span class="text-nowrap" t-out="tax_group['group_name']"/>
                                </td>
                                <td class="text-end o_price_total">
                                    <span class="text-nowrap"
                                          t-out="tax_group['tax_amount']"
                                          t-options='{"widget": "monetary", "display_currency": currency}'
                                    >31.05</span>
                                </td>
                            </t>
                            <t t-else="">
                                <td>
                                    <span t-out="tax_group['group_name']">Tax 15%</span>
                                    <span> on </span>
                                    <span class="text-nowrap"
                                          t-out="tax_group['display_base_amount']"
                                          t-options='{"widget": "monetary", "display_currency": currency}'
                                    >27.00</span>
                                </td>
                                <td class="text-end o_price_total">
                                    <span class="text-nowrap"
                                          t-out="tax_group['tax_amount']"
                                          t-options='{"widget": "monetary", "display_currency": currency}'
                                    >4.05</span>
                                </td>
                            </t>
                        </tr>
                    </t>
                </t>
                <!--Total amount with all taxes-->
                <tr class="o_total">
                    <td><strong>Total</strong></td>
                    <td class="text-end">
                        <strong t-out="tax_totals['total_amount']"
                                t-options='{"widget": "monetary", "display_currency": currency}'
                        >31.05</strong>
                    </td>
                </tr>
            </table>
        </div>
    </template>

    <!-- DGII Invoice Report Action -->
    <record id="action_report_invoice_dgii" model="ir.actions.report">
      <field name="name">DGII Invoice</field>
      <field name="model">account.move</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">dgii_invoicing.report_dgii_invoice</field>
      <field name="report_file">dgii_invoicing.report_dgii_invoice</field>
      <field name="is_invoice_report">True</field>
      <field name="print_report_name">'DGII_Invoice_' + object.name</field>
      <field name="binding_model_id" ref="account.model_account_move"/>
      <field name="binding_type">report</field>
    </record>

    <template id="report_dgii_invoice">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang"/>
                <t t-call="dgii_invoicing.report_invoice_document_dgii"
                    t-lang="lang"/>
            </t>
        </t>
    </template>

  </data>
</odoo>
